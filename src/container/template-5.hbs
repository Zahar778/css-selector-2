<header class="page_block">
  <div class="header row g-0">
    <div class="col-3">
      {{> logo}}
    </div>
    <nav class="header_nav col-9">
      <div class="header_nav_right">
        {{>nav list=header}}
      </div>
    </nav>
  </div>
</header>

<main class="main">
  {{#with messages }}
  <div class="messages">
  <h1 class="message_title">{{title}}</h1>
        {{#each list}}
        <div class="msg">
          <strong class="msg_name">{{title}}</strong>
          <p class="msg_text">{{message}}</p>
          <span class="msg_day">{{day}}</span>
        </div>
        {{/each}}
 <a href="#" class="message_link">All message</a>
</div>
  {{/with}}

  {{#with form}}
    <form class="form">
      <h2 class="form_title">{{title}}</h2>

      <div class="form_input_list">
        {{#each inputs}}
        <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_in" />
        {{/each}}
      </div>

      <div class="form_checkbox">
        <div></div>
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <label for="{{checkbox.name}}" >{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{title}}</p>
    </form>
  {{/with}}
</main>

<div class="advantages">
  {{#each advantages}}
  <div class="advan">
    <strong>{{title}}</strong>
    <p>{{text}}</p>
  </div>
  {{/each}}
</div>


  <footer class="row footer">
    <div>
      {{> logo}}
      <span class="footer_copyright"> Copyright 2023-2024 </span> 
    </div>
    {{#each footer}}
    <div class="col-3">
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
  </footer>
</footer>
