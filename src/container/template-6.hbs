<header class="page_block">
  <div class="header row g-0">
    <div class="col-3">
      {{> logo}}
    </div>
    <nav class="header_nav col-9">
      <div class="header_nav_right">
        {{>nav list=header}}
      </div>
    </nav>
  </div>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
  </div>
  {{/with}}

   {{#with form}}
      <form class="form">
      <h2 class="form_title">{{title}}</h2>

      <div class="form_input_list">
        {{#each inputs}}
        <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_in" />
        {{/each}}
      </div>

      <div class="form_checkbox">
        <div></div>
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <label for="{{checkbox.name}}" >{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>

<div class="updates">
  {{#with updates}}
  <h2 class="updates_title">{{title}}</h2>
  {{#each list}}
  <div class="comment">
    <p class="nickname">@{{nickname}}</p>
    <div class="list_text">{{description}}</div>
  </div>
  {{/each}}
    <a href="{{show_all.url}}" class="show_link">{{show_all.text}}</a>
  {{/with}}
</div>

 
  <div>
     <h3 class="expirience_title">{{expirience.title}}</h3>
     <div class="hot">{{expirience.badge}}</div>
<div class="expirience">
  {{#with expirience}}
  {{#each list}}
  <div class="expirience_list">
    <div class="expirience_name">{{name}}</div>
    <div class="expirience_text">{{details}}</div>
  </div>
  {{/each}}
  {{/with}}
</div>
</div>




  <footer class="row footer">
    <div>
      {{> logo}}
      <span class="footer_copyright"> Copyright 2023-2024 </span> 
    </div>
    {{#each footer}}
    <div class="col-3">
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
  </footer>
</footer>
